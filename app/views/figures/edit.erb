    <form action="/figures/<%= @figure.id %>" method="post">
      <input type="hidden" id="hidden" name="_method" value="patch">
      <h4><%=@figure.name%></h4>
      <label>Figure Name: </label>
      <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
      <label>Existing Titles: </label><br>
      <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>> <br>
      <% end %><br>
      <label>Existing Landmarks: </label><br>
      <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><br>
      <% end %><br>
      <label>Landmark Name: </label>
      <input type="text" name="landmark[name]" id="new_landmark"><br>
      <label>Title Name</label>
      <input type="text" name="title[name]" id="new_title"><br>

      <input type="submit" value="Edit Figure">
    </form>
  </body>
